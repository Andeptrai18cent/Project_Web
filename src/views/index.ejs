            <!-- User Content -->
            <div class="content hidden" id="user-content">
                <div class="user-cards">
                  <% users.forEach(user => { %>
                    <div class="user-card">
                      <div class="user-header">
                        <img src="<%= user.profile_picture || 'default_image_url' %>" alt="User">
                        <div class="user-info">
                          <h3><%= user.name %></h3>
                          <span class="status <%= user.status === 'active' ? 'active' : 'inactive' %>"><%= user.status %></span>
                        </div>
                      </div>
                      <div class="user-details">
                        <div class="detail">
                          <i data-feather="mail"></i>
                          <span><%= user.email %></span>
                        </div>
                        <div class="detail">
                          <i data-feather="phone"></i>
                          <span><%= user.phone_number %></span>
                        </div>
                        <div class="detail">
                          <i data-feather="map-pin"></i>
                          <span><%= user.address %></span>
                        </div>
                      </div>
                      <div class="user-stats">
                        <div class="stat">
                          <label>Join Date</label>
                          <span><%= user.join_date %></span>
                        </div>
                        <div class="stat">
                          <label>Tasks</label>
                          <span><%= user.tasks_count %></span>
                        </div>
                      </div>
                      <div class="user-actions">
                        <button class="btn-edit">Edit</button>
                        <button class="btn-deactivate">Deactivate</button>
                      </div>
                    </div>
                  <% }) %>
                </div>
              </div>
              

            <!-- Tasker Content -->
            <div class="content hidden" id="tasker-content">
