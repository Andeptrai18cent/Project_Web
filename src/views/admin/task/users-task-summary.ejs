<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="Users Task Summary" />
    <title>Users Task Summary</title>
    <link href="/Admin/css/styles.css" rel="stylesheet" />
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
</head>

<body class="sb-nav-fixed">
    <%- include('../layout/header') -%>
    <div id="layoutSidenav">
        <%-include('../layout/sidenav') -%>
        <div id="layoutSidenav_content">
            <main>
                <div class="container-fluid px-4">
                    <h1 class="mt-4">
                        <i class="fas fa-users"></i> Danh sách User và Task
                    </h1>
                    <ol class="breadcrumb mb-4">
                        <li class="breadcrumb-item"><a href="/admin">Dashboard</a></li>
                        <li class="breadcrumb-item"><a href="/admin/task">Tasks</a></li>
                        <li class="breadcrumb-item active">Users Task Summary</li>
                    </ol>
                    
                    <!-- Navigation buttons -->
                    <div class="mb-3">
                        <a href="/admin/task" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Quay lại Tasks
                        </a>
                        <button type="button" class="btn btn-outline-info" onclick="location.reload()">
                            <i class="fas fa-refresh"></i> Tải lại
                        </button>
                    </div>

                    <!-- Error message -->
                    <% if (typeof error !== 'undefined' && error) { %>
                        <div class="alert alert-warning alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-triangle"></i> <%= error %>
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    <% } %>

                    <!-- Statistics Cards -->
                    <% if (users && users.length > 0) { %>
                        <div class="row mb-4">
                            <div class="col-xl-3 col-md-6">
                                <div class="card bg-primary text-white mb-4">
                                    <div class="card-body">
                                        <div class="d-flex justify-content-between">
                                            <div>
                                                <div class="small text-white-50">Tổng Users</div>
                                                <div class="h5"><%= pagination.totalUsers %></div>
                                            </div>
                                            <div><i class="fas fa-users fa-2x"></i></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xl-3 col-md-6">
                                <div class="card bg-success text-white mb-4">
                                    <div class="card-body">
                                        <div class="d-flex justify-content-between">
                                            <div>
                                                <div class="small text-white-50">Tổng Tasks</div>
                                                <div class="h5"><%= users.reduce((sum, u) => sum + u.total_tasks, 0) %></div>
                                            </div>
                                            <div><i class="fas fa-tasks fa-2x"></i></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% } %>

                    <!-- Users Task Summary Table -->
                    <div class="card mb-4">
                        <div class="card-header">
                            <i class="fas fa-table me-1"></i>
                            Tổng quan Task theo User
                            <% if (pagination && pagination.totalUsers > 0) { %>
                                (<%= pagination.totalUsers %> users)
                            <% } %>
                        </div>
                        <div class="card-body">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>User ID</th>
                                        <th>Tên</th>
                                        <th>Username</th>
                                        <th>Email</th>
                                        <th>Phone</th>
                                        <th>Tổng Task</th>
                                        <th>Hoàn thành</th>
                                        <th>Đang thực hiện</th>
                                        <th>Chờ xử lý</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% if (users && users.length > 0) { %>
                                        <% users.forEach(user => { %>
                                            <tr>
                                                <td>
                                                    <span class="badge bg-primary">#<%= user.user_id %></span>
                                                </td>
                                                <td>
                                                    <div class="d-flex align-items-center">
                                                        <i class="fas fa-user-circle text-primary me-2"></i>
                                                        <strong><%= user.name %></strong>
                                                    </div>
                                                </td>
                                                <td>
                                                    <span class="text-muted">@<%= user.username %></span>
                                                </td>
                                                <td>
                                                    <small>
                                                        <i class="fas fa-envelope text-info me-1"></i>
                                                        <%= user.email %>
                                                    </small>
                                                </td>
                                                <td>
                                                    <small>
                                                        <i class="fas fa-phone text-success me-1"></i>
                                                        <%= user.phone_number || 'N/A' %>
                                                    </small>
                                                </td>
                                                <td>
                                                    <span class="badge bg-info fs-6">
                                                        <%= user.total_tasks %>
                                                    </span>
                                                </td>
                                                <td>
                                                    <span class="badge bg-success">
                                                        <%= user.completed_tasks %>
                                                    </span>
                                                    <% if (user.total_tasks > 0) { %>
                                                        <br>
                                                        <small class="text-muted">
                                                            (<%= Math.round((user.completed_tasks / user.total_tasks) * 100) %>%)
                                                        </small>
                                                    <% } %>
                                                </td>
                                                <td>
                                                    <span class="badge bg-warning">
                                                        <%= user.in_progress_tasks %>
                                                    </span>
                                                </td>
                                                <td>
                                                    <span class="badge bg-secondary">
                                                        <%= user.pending_tasks %>
                                                    </span>
                                                </td>
                                                <td>
                                                    <div class="btn-group btn-group-sm" role="group">
                                                        <a href="/admin/task/user/<%= user.user_id %>" 
                                                           class="btn btn-primary"
                                                           data-bs-toggle="tooltip" 
                                                           title="Xem chi tiết tasks của user">
                                                            <i class="fas fa-eye"></i>
                                                        </a>
                                                        <% if (user.total_tasks > 0) { %>
                                                            <button type="button" class="btn btn-outline-info"
                                                                    data-bs-toggle="tooltip" 
                                                                    title="<%= user.total_tasks %> tasks | <%= user.completed_tasks %> hoàn thành">
                                                                <i class="fas fa-info-circle"></i>
                                                            </button>
                                                        <% } %>
                                                    </div>
                                                </td>
                                            </tr>
                                        <% }) %>
                                    <% } else { %>
                                        <tr>
                                            <td colspan="10" class="text-center py-4">
                                                <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                                                <h5 class="text-muted">Không có user nào</h5>
                                                <p class="text-muted">Chưa có user nào đăng ký trong hệ thống</p>
                                            </td>
                                        </tr>
                                    <% } %>
                                </tbody>
                            </table>
                        </div>
                    </div>

                    <!-- Pagination -->
                    <% if (pagination && pagination.totalPages > 1) { %>
                        <nav aria-label="Users pagination">
                            <ul class="pagination justify-content-center">
                                <li class="page-item <%= !pagination.hasPrev ? 'disabled' : '' %>">
                                    <a class="page-link" href="/admin/task/users?page=<%= pagination.prevPage %>">
                                        <i class="fas fa-chevron-left"></i> Previous
                                    </a>
                                </li>
                                
                                <% for(let i = Math.max(1, pagination.currentPage - 2); i <= Math.min(pagination.totalPages, pagination.currentPage + 2); i++) { %>
                                    <li class="page-item <%= i === pagination.currentPage ? 'active' : '' %>">
                                        <a class="page-link" href="/admin/task/users?page=<%= i %>">
                                            <%= i %>
                                        </a>
                                    </li>
                                <% } %>
                                
                                <li class="page-item <%= !pagination.hasNext ? 'disabled' : '' %>">
                                    <a class="page-link" href="/admin/task/users?page=<%= pagination.nextPage %>">
                                        Next <i class="fas fa-chevron-right"></i>
                                    </a>
                                </li>
                            </ul>
                        </nav>
                        
                        <!-- Page info -->
                        <div class="text-center mt-3">
                            <small class="text-muted">
                                Hiển thị <%= ((pagination.currentPage - 1) * pagination.limit) + 1 %> - 
                                <%= Math.min(pagination.currentPage * pagination.limit, pagination.totalUsers) %> 
                                trong tổng số <%= pagination.totalUsers %> users
                            </small>
                        </div>
                    <% } %>
                </div>
            </main>
            <%- include('../layout/footer') -%>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"
        crossorigin="anonymous"></script>
    <script src="/Admin/js/scripts.js"></script>
    
    <!-- Enable tooltips -->
    <script>
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
        var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl)
        })
    </script>
</body>

</html>