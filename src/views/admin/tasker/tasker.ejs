<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="Hỏi Dân IT - Dự án laptopshop" />
    <meta name="author" content="Hỏi Dân IT" />
    <title>Dashboard</title>
    <link href="/Admin/css/styles.css" rel="stylesheet" />
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
</head>

<body class="sb-nav-fixed">
    <%- include('../layout/header') -%>
    <div id="layoutSidenav">
        <%-include('../layout/sidenav') -%>
        <div id="layoutSidenav_content">
            <main>
                <div class="container-fluid px-4">
                    <h1 class="mt-4">Manage Taskers</h1>
                    <ol class="breadcrumb mb-4">
                    <li class="breadcrumb-item"><a href="/admin">Dashboard</a></li>
                    <li class="breadcrumb-item active">Taskers</li>
                    </ol>
                    <div>
                        <table class="table table-bordered table-hover table-striped">
                            <thead>
                                <tr>
                                    <td>Id</td>
                                    <td>Username</td>
                                    <td>Name</td>
                                    <td>Công việc</td>
                                    <td>Lương/Giờ</td>
                                    <td>Address</td>
                                    <td>Phone</td>
                                    <td>Action</td>
                                </tr>
                            </thead>
                            <tbody>
                            <% taskers.forEach(tasker => { %>
                                <tr>
                                    <td><%= tasker.tasker_id %></td>
                                    <td><%= tasker.Users.username %></td>
                                    <td><%= tasker.Users.name %></td>
                                    <td><%= tasker.ServiceGroup.group_name %></td>
                                    <td><%= tasker.hourly_rate %></td>
                                    <td><%= tasker.Users.address %></td>
                                    <td><%= tasker.Users.phone_number %></td>
                                    <td class="actions">
                                        <a href="/admin/tasker/edit/<%= tasker.tasker_id %>" class="btn btn-primary">Sửa</a>
                                        <form action="/admin/taskers/delete/<%= tasker.tasker_id %>" method="POST" style="display:inline;">
                                            <button type="submit" class="btn btn-primary">Delete</button>
                                        </form>
                                    </td>
                                </tr>
                        <% }) %>
                        </tbody>

                        </table>
                    </div>
                </div>

            </main>
            <%- include('../layout/footer') -%>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"
        crossorigin="anonymous"></script>
    <script src="/Admin/js/scripts.js"></script>
</body>

</html>